---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Verbesserungsvorschläge">
  <h1>Verbesserungsvorschläge</h1>
  <form action="/submit-vorschlag" method="post">
    <label for="vorschlag">Vorschlag:</label>
    <textarea id="vorschlag" name="vorschlag" required></textarea>
    <label for="relevanz">Relevanz:</label>
    <select id="relevanz" name="relevanz">
      <option value="hoch">Hoch</option>
      <option value="mittel">Mittel</option>
      <option value="niedrig">Niedrig</option>
    </select>
    <button type="submit">Absenden</button>
  </form>
</Layout>
