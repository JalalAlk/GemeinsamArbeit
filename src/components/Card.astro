---
const { name, branch, subjects, buttonText, buttonLink } = Astro.props;
---
<div class="card">
    <h2>{name}</h2>
    <p>Branch: {branch}</p>
    <p>Subjects: {subjects.join(', ')}</p>
    <a href={buttonLink} class="button">{buttonText}</a>
</div>

<style>
.card {
    border: 6px solid #ccc;
    padding: 16px;
    margin: 16px;
    border-radius: 8px;
    background-color: #fff;
}

.button {
    display: inline-block;
    padding: 8px 16px;
    background-color: #00246B;
    color: #0064B2;
    text-decoration: none;
    border-radius: 4px;
    margin-top: 8px;
}

.button:hover {
    background-color: #0056b3;
}
</style>
